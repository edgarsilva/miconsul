templ PatientsPage(patients []model.Patient, patient model.Patient, layoutProps layoutProps) {
	@Layout(layoutProps) {
		<div class="px-4 lg:px-8">
			@CmpBtnBack("back", "/patients")
		</div>
		if patient.ID != "" {
			<section class="grow flex flex-col px-0 sm:px-4 md:px-8 py-8 lg:justify-center lg:w-2/3 lg:max-w-4xl lg:mx-auto">
				@PatientProfile(patient)
			</section>
		} else {
			<section class="grow flex flex-col px-0 sm:px-4 md:px-8 py-8 lg:justify-center lg:w-2/3 lg:max-w-4xl lg:mx-auto">
				<div class="relative lg:-translate-y-16 xl:-translate-y-32">
					<h1 class="px-4 sm:px-0 font-bold text-2xl pb-4 w-full">Patients</h1>
					@PatientsList(patients)
				</div>
			</section>
		}
	}
}

