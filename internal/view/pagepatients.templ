					<div class="max-w-2xl space-y-10">
						<fieldset>
							<legend class="text-sm font-semibold leading-6">Send notifications about</legend>
							<div class="mt-6 space-y-6">
								<div class="relative flex gap-x-3">
									<div class="flex h-6 items-center">
										<input name="create_apnt" type="checkbox" checked="checked" class="checkbox checkbox-secondary"/>
									</div>
									<div class="text-sm leading-6">
										<label for="create_apnt" class="font-medium">Create/Cancel appointments</label>
										<p class="text-base-content/60">Notify when a new appointment is created or canceled.</p>
									</div>
								</div>
								<div class="relative flex gap-x-3">
									<div class="flex h-6 items-center">
										<input name="update_apnt" type="checkbox" checked="checked" class="checkbox checkbox-secondary"/>
									</div>
									<div class="text-sm leading-6">
										<label for="update_apnt" class="font-medium">Any updates</label>
										<p class="text-base-content/60">Notify on any appointment updates.</p>
									</div>
								</div>
							</div>
						</fieldset>
						<fieldset>
							<legend class="text-sm font-semibold leading-6">Send notifications on:</legend>
							<div class="mt-6 space-y-6">
								<label class="flex items-center gap-x-3 text-sm font-medium leading-6">
									<input
										name="medium"
										type="checkbox"
										class="checkbox checkbox-primary"
									/>
									Email
									<figure aria-lable="whatsapp icon" class="h-6 w-6">
										@IconColorGmail()
									</figure>
								</label>
								<label class="flex items-center gap-x-3 text-sm font-medium leading-6">
									<input name="medium" type="checkbox" class="checkbox checkbox-primary"/>
									Whatsapp
									<figure aria-lable="whatsapp icon" class="h-6 w-6">
										@IconColorWhatsapp()
									</figure>
								</label>
								<label class="flex items-center gap-x-3 text-sm font-medium leading-6">
									<input name="medium" type="checkbox" class="checkbox checkbox-primary"/>
									Telegram
									<figure aria-lable="whatsapp icon" class="h-6 w-6">
										@IconColorTelegram()
									</figure>
								</label>
								<label class="flex items-center gap-x-3 text-sm font-medium leading-6">
									<input name="medium" type="checkbox" class="checkbox checkbox-primary"/>
									Messenger
									<figure aria-lable="whatsapp icon" class="h-6 w-6">
										@IconColorMessenger()
									</figure>
								</label>
							</div>
						</fieldset>
					</div>
				</div>
				<div class="flex items-center justify-end gap-x-6 border-t border-base/content/10 px-4 py-4 sm:px-8">
					<button type="button" class="btn btn-ghost">Cancel</button>
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</form>
		</div>
	</div>
}
