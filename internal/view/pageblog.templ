package view

templ PageBlog(vc *Ctx) {
	@Layout(vc) {
		<div id="content" class="px-4 lg:px-0">
			@Hero()
			@NewArticles()
			@FeaturedArticle(
				"Todos",
				"Todos App",
				"/todos",
				"/public/public/images/avatar2.jpg",
				"/public/public/images/asset7.jpg",
			)
			@TopArticles()
		</div>
	}
}

